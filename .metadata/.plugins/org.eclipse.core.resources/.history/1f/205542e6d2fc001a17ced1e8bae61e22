import java.util.Scanner;

public class Unary {
 
		public static void main(String[] args) {
			// TODO Auto-generated method stub
			Scanner myScanner = new Scanner(System.in);
	        String userInput;
	 
	     try {
	       
	        	System.out.println("Please enter an intger and I will add 1 to it: ");
	        	 
	        	 
	     }catch(NumberFormatException e) {
             System.out.println("Please use a valid whole number: ");
         }
	     while(!myScanner.hasNextInt()) {
    		 myScanner.next();
    		}
    		int userInt = myScanner.nextInt();	 
    		int result  = userInt + 1;
	    
	        	 System.out.println("The number you enter +1 is equal to: " + result );
	        }
		}
		
 

	        
 

		